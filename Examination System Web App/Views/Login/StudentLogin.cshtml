@model Examination_System_Web_App.View_Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ITI Exam Login</title>
    <link rel="shortcut icon" type="image/x-icon" href="/itiLogo.png" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
        body {
            background: linear-gradient(90deg, rgba(236, 56, 63, 1) 3%, rgba(161, 39, 45, 1) 31%, rgba(84, 20, 23, 1) 100%);
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            width: 90%;
            max-width: 400px; /* Adjust max-width as needed */
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            position: relative; /* Added to position modal relative to form */
        }

            .login-container h3 {
                text-align: center;
            }

            .login-container button[type="submit"] {
                width: 100%;
                background-color: #a1272d;
                color: #fff;
            }

        /* Modal CSS */
        .modal {
            display: none; /* Hidden by default */
            position: absolute; /* Position relative to the form container */
            top: 55%; /* Center vertically */
            left: 50%; /* Center horizontally */
            transform: translate(-50%, -50%); /* Center the modal */
            width: 60%;
            height: 20%; /* Half the width of the form container */
            background-color: #fefefe;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            z-index: 1; /* Sit on top */
        }

        /* Close Button */
        .close {
            position: absolute;
            top: 10px;
            right: 10px;
            color: #aaaaaa;
            font-size: 24px;
            cursor: pointer;
        }

        .error-message {
            color: red;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="text-center">
            <img src="/images/itiLogo.png" alt="Alternate Text" class="img-fluid" style="width: 160px; height:160px;" />
            <h3 class="mt-2" style="color:#a1272d;">ITI Exam System</h3>
        </div>

        <form class="mt-3" asp-action="StudentLogin">
            <h5 class="text-center">Login as Student</h5>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email address</label>
                <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" id="exampleInputPassword1">
            </div>

            <button type="submit" class="btn">Login</button>
        </form>

        <!-- Modal -->
        <div id="errorModal" class="modal">
            <span class="close" onclick="closeModal()">&times;</span>
            <div class="error-message">@TempData["ErrorMessage"]</div>
        </div>
        <!-- End of Modal -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

    <!-- Script to control modal display -->
    <script>
        // Function to close the modal
        function closeModal() {
            document.getElementById('errorModal').style.display = 'none';
        }

        // Display modal when an error message is present in TempData
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            document.getElementById('errorModal').style.display = 'block';
        }
    </script>
</body>
</html>
