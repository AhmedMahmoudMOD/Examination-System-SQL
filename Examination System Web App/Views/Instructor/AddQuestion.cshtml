@using Examination_System_Web_App.View_Models

@{
    Layout = "~/Views/Shared/_LayoutBS.cshtml";

}
@model QuestionWithChoicesVM
<h2>Add To Course id = @ViewBag.CourseID</h2>
<div class="main-container container-fluid mt-4">

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddQuestion</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    
</head>
<body>
    <div class="main-container container-fluid">

        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Multiple Choices</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">True & False</button>
            </li>

        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
            <form method="post" asp-action="AddMCQ">
                <input type="hidden" name="CrsId" value="@ViewBag.CourseID" />
                    <div class="form-group">
                        <label asp-for="Q_Text" class="form-label"></label>
                        <input type="text" asp-for="Q_Text" class="form-control">
                        <span asp-validation-for="Q_Text" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group">
                                <label asp-for="Choice_1" class="form-label"></label>
                                <input type="text" asp-for="Choice_1" class="form-control">
                               <span asp-validation-for="Choice_1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group">
                                <label asp-for="Choice_2" class="form-label"></label>
                                <input type="text" asp-for="Choice_2" class="form-control">
                                <span asp-validation-for="Choice_2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group ">
                                <label asp-for="Choice_3" class="form-label"></label>
                                <input type="text" asp-for="Choice_3" class="form-control">
                                <span asp-validation-for="Choice_3" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group ">
                                <label asp-for="Choice_4" class="form-label"></label>
                                <input type="text" asp-for="Choice_4" class="form-control">
                                 <span asp-validation-for="Choice_4" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group ">
                                <label class="form-label">Model Answer: </label>
                            <select name="ModelAnswer" class="form-control form-select select2 " data-bs-placeholder="Select Answer">

                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Q_Score" class="form-label"></label>
                        <input type="number" asp-for="Q_Score" class="form-control">
                        <span asp-validation-for="Q_Score" class="text-danger"></span>

                    </div>
                    <input type="submit" class="btn  btn-lg btn-primary" value="Confirm" style="margin-top:10px;">
                </form>
            </div>

            <!-- True & False Questions Form -->

            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
            <form method="post" asp-action="AddTorF">
                <input type="hidden" name="CrsId" value="@ViewBag.CourseID" />
                    <div class="form-group">
                        <label asp-for="Q_Text" class="form-label"></label>
                        <input type="text" asp-for="Q_Text" class="form-control">
                       <span asp-validation-for="Q_Text" class="text-danger"></span>
                    </div>
                    <div class="row">

                        <div class="form-group">
                            <label asp-for="ModelAnswer" class="form-label"></label>
                            <select asp-for="ModelAnswer" class="form-control form-select select2 " data-bs-placeholder="Select Answer">
                                <option value="1">True</option>
                                <option value="2">False</option>
                            </select>
                        </div>

                    </div>
                    <div class="form-group">
                    <label asp-for="Q_Score" class="form-label"></label>
                    <input type="text" asp-for="Q_Score" class="form-control">
                    <span asp-validation-for="Q_Score" class="text-danger"></span>
                    </div>
                    <input type="submit" class="btn  btn-lg btn-primary" value="Confirm" style="margin-top:10px;">
                </form>
            </div>

        </div>
    </div>
@section Scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
