@model IEnumerable<Std_course>
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutStudent";
    Student std = (ViewBag.student as Student);
    ViewData["stdid"] = std.std_id;
    string color;
}

<h1 class="text-center"> @std.std_fname @std.std_lname Degrees</h1>
<div>
<table class="table table-striped table-hover table-bordered">
    <thead>
    <tr>
        <td>Subject</td>
        <td>Degree</td>
        <td>status</td>
    </tr>
    </thead>
    <tbody>
            @if (Model.Count() >  0)
            {
                @foreach (var item in Model)
                {
                    if (@item.grade <= 50)
                    {
                        color = "bg-danger";
                    }
                    else
                    {
                        color = "bg-success";
                    }

                    <tr class=@color>
                        <td>@item.crs.crs_name</td>
                        <td>@item.grade</td>
                        <td>@item.status</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3"> this student didn't took any exam yet</td>
                </tr>
            }
           
    </tbody>
</table>
</div>


@section scripts
{
    <script>
        $("tbody tr ").css("font-weight", "bold").css("color", "white");
        $("h1").css("color", "red");
    </script>
}

